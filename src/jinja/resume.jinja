<!-- resume.jinja -->
<article class="resume" data-page="resume">

  <header>
    <h2 class="h2 article-title">Resume</h2>
  </header>

  <section class="timeline">

    <div class="title-wrapper">
      <div class="icon-box">
        <ion-icon name="book-outline"></ion-icon>
      </div>

      <h3 class="h3">Education</h3>
    </div>

    <ol class="timeline-list">

      {% for education in resume.education | reverse %}

      <li class="timeline-item">

        <h4 class="h4 timeline-item-title">{{education.title}}</h4>
        <p class="school-name">{{education.school}}</p>

        <span>{{education.timeline}}</span>

        <p class="timeline-text">
          {{education.description}}
        </p>

      </li>

      {% endfor %}

    </ol>

  </section>

  <section class="timeline">

    <div class="title-wrapper">
      <div class="icon-box">
        <ion-icon name="book-outline"></ion-icon>
      </div>

      <h3 class="h3">Work Experience</h3>
    </div>

    <ol class="timeline-list">

      {% for experience in resume.experience | reverse %}

      <li class="timeline-item">

        <h4 class="h4 timeline-item-title">{{experience.title}}</h4>
        <p class="company-name">{{experience.company}}</p>

        <span>{{experience.timeline}}</span>

        <ul class="experience-description">
          {% for description in experience.description %}
          <li>{{description}}</li>
          {% endfor %}
        </ul>

      </li>

      {% endfor %}

    </ol>

  </section>

  
  <!-- My Skills -->
  {% if resume.skills.enabled %}
  <section class="timeline">

    <div class="title-wrapper">
      <div class="icon-box">
        <ion-icon name="code-slash-outline"></ion-icon>  <!-- Changed icon -->
      </div>

      <h3 class="h3">{{resume.skills.title}}</h3>
    </div>

    <ol class="timeline-list skills-timeline">

      {% for skill in resume.skill %}
      <li class="timeline-item">
        <h4 class="h4 timeline-item-title">{{skill.title}}</h4>
        {% if resume.skills.show_value %}
        <span class="skill-proficiency">{{skill.value}}</span>
        {% endif %}
        {% if skill.description %}
        <p class="timeline-text">{{skill.description}}</p>
        {% endif %}
      </li>
      {% endfor %}

    </ol>

  </section>
  {% endif %}

  <!-- Languages -->
  {% if resume.languages.enabled %}
  <section class="timeline">

    <div class="title-wrapper">
      <div class="icon-box">
        <ion-icon name="language-outline"></ion-icon>  <!-- Changed icon -->
      </div>

      <h3 class="h3">{{resume.languages.title}}</h3>
    </div>

    <ol class="timeline-list">

      {% for language in resume.language %}
      <li class="timeline-item">
        <h4 class="h4 timeline-item-title">{{language.title}}</h4>
        {% if resume.languages.show_value %}
        <span class="language-proficiency">{{language.value}}</span>
        {% endif %}
        {% if language.description %}
        <p class="timeline-text">{{language.description}}</p>
        {% endif %}
      </li>
      {% endfor %}

    </ol>

  </section>
  {% endif %}


</article>
